<h1>Jogos</h1>

<form action="/jogos/{{#if action }}save{{else}}create{{/if}}" method="post">

    <input type="hidden" name="id" value="{{jogo_editing.id}}">

    <label for="title">Title</label><br>

    <input type="text" id="title" name="title" value="{{jogo_editing.title}}" required><br><br>

    <label for="description">Description</label><br>

    <input type="text" id="description" name="description" value="{{jogo_editing.description}}" required><br><br>

    <label for="year">Year</label><br>

    <input type="number" id="year" name="year" value="{{jogo_editing.year}}" required><br><br>

    <label for="platform">Platform</label><br>

    <input type="text" id="platform" name="platform" value="{{jogo_editing.platform}}" required><br><br>

    <label for="DesenvolvedorId">Desenvolvedor</label><br>

    <input type="text" id="DesenvolvedorId" name="DesenvolvedorId" value="{{jogo_editing.DirectorId}}" required><br><br>

    <label for="jogadores">Jogadores</label><br>

    <input type="text" id="jogadores" name="jogadores" value="{{jogo_editing.jogadores}}"><br><br>

    <button>{{#if action }}Editar{{else}}Criar{{/if}}</button>

</form>

<hr>

<table>

    <thead>

        <tr>

            <th>Title</th>

            <th>Description</th>

            <th>Year</th>

            <th>Platform</th>

            <th>Desenvolvedor</th>

            <th>Ações</th>

        </tr>

    </thead>

    <tbody>

        {{#each films}}

        <tr>

            <td>{{this.title}}</td>

            <td>{{this.description}}</td>

            <td>{{this.year}}</td>

            <td>{{this.platform}}</td>

            <td>{{this.DesenvolvedorId}}</td>

            <td style="display: flex; justify-content: space-evenly;">

                <form action="/jogos/edit" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Edit</button>

                </form>

                <form action="/jogos/delete" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Del</button>

                </form>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>
